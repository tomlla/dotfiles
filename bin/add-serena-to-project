#!/usr/bin/env bash

cat << EOS
やること(初回)

serena起動
# uvx --from git+https://github.com/oraios/serena serena start-mcp-server

project に追加(claudeの場合)
# claude mcp add serena --scope project -- uvx --from git+https://github.com/oraios/serena serena start-mcp-server --context ide-assistant --project $(pwd)
EOS


set -x
claude mcp add serena -- uvx \
--from git+https://github.com/oraios/serena serena-mcp-server \
--context ide-assistant \
--project $(pwd)

echo "OK!"
