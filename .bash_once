# vim: set ft=sh:

# echo "loading ~/.bash_once [flags: $-]"

HISTSIZE=50000
HISTTIMEFORMAT='%Y/%m/%d %H:%M:%S '

shopt -s autocd

if [ -z "${USER_PATH_ADDED}" ]; then

echo "[add user path]"

# /opt/yarn-global/bin:\

export PATH="\
${HOME}/.cargo/bin:\
${HOME}/.dotfiles/bin:\
${HOME}/.anyenv/bin:\
${HOME}/dev/bin:\
${HOME}/.yarn/bin:\
${HOME}/.config/yarn/global/node_modules/.bin:\
/opt/bin:\
/opt/sbt/bin:\
${PATH}" && export USER_PATH_ADDED=true

fi

[ -f ~/.fzf.bash ] && source ~/.fzf.bash

if [ -z "${ANYENV_EVALUATED}" ]; then
    echo "[init anyenv]"
    eval "$(anyenv init -)" && export ANYENV_EVALUATED=true
fi

eval "$(direnv hook bash)"


alias a=alias
alias ls='ls --color=auto -F'
alias ll='ls -l'
alias wh=which
alias ty=type
alias s=sudo
alias tm=tmux

alias p='sudo pacman'
alias yao=yaourt

alias g=git
alias dk=docker
alias dkc=docker-compose
alias cci=circleci

alias y=yarn
alias be='bundle exec'

# -- functions
alias pbcopy='xsel --clipboard --input'

showPath() {
    echo $PATH | sed 's/:/\n/g'
}

PS1='\u@\h \W\n\$ '

# -- [configure git completion and promppt]
source /usr/share/git/completion/git-completion.bash
__git_complete g __git_main

source /usr/share/git/completion/git-prompt.sh

GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_SHOWUPSTREAM=auto
GIT_PS1_SHOWUNTRACKEDFILES=1
GIT_PS1_SHOWSTASHSTATE=1

PS1='\u@\h \w$(__git_ps1)\n\$ '

fbr() {
  local branches branch
  branches=$(git for-each-ref --count=30 --sort=-committerdate refs/heads/ --format="%(refname:short)") &&
  branch=$(echo "$branches" |
           fzf-tmux -d $(( 2 + $(wc -l <<< "$branches") )) +m) &&
  git checkout $(echo "$branch" | sed "s/.* //" | sed "s#remotes/[^/]*/##")
}

fzf-ghq-widget () {
    local selected=`ghq list --full-path | fzf` || return $?
    READLINE_LINE="${READLINE_LINE:0:$READLINE_POINT}$selected${READLINE_LINE:$READLINE_POINT}";
    READLINE_POINT=$(( READLINE_POINT + ${#selected} ));
}
bind -x '"\C-g": "fzf-ghq-widget"'

load-gcp-sdk () {

# The next line enables shell command completion for gcloud.
if [ -f '/opt/google-cloud-sdk/completion.bash.inc' ]; then
    source '/opt/google-cloud-sdk/completion.bash.inc'
    source '/opt/google-cloud-sdk/path.bash.inc'
    alias gcl-interactive="gcloud alpha interactive"
fi
}
mkcd () {
    mkdir -p $1 && cd $1
}
