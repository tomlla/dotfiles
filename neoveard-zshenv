# - PATHではなくpath を使うこと
# - exportはしないこと path があとでPATHに含まれる
typeset -U path
path=(
  $HOME/bin(N-/)
  $HOME/note/shscript/bin(N-/)
  /opt/play-1.2.7
  /opt/eclipse/eclipse
  $HOME/.linuxbrew/bin
  $path
)
export LD_LIBRARY_PATH="$HOME/.linuxbrew/lib:$LD_LIBRARY_PATH"
