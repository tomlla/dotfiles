
filetype off
"set nocompatible
set wrap
set number
set ruler
set list
set listchars=tab:>_,trail:-,nbsp:%,extends:>,precedes:<
set incsearch
set hlsearch
set showmatch
set whichwrap=h,l
set ignorecase
set smartcase
set hidden
set history=2000
set autoindent
set expandtab
set tabstop=2
set shiftwidth=2
set helplang=en
set wildmenu
set wildmode=longest:full
set fdm=indent

nnoremap k   gk
nnoremap j   gj
vnoremap k   gk
vnoremap j   gj
nnoremap gk  k
nnoremap gj  j
vnoremap gk  k
vnoremap gj  j

cnoremap <C-f>  <Right>
cnoremap <C-b>  <Left>
cnoremap <C-a>  <C-b>
cnoremap <C-e>  <C-e>

filetype plugin indent on
syntax enable
colorscheme desert
