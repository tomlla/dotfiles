# javacがばけるから入れた
export JAVA_TOOL_OPTIONS=-Dfile.encoding=UTF-8

#export JAVA_HOME=/System/Library/Java/JavaVirtualMachines/1.6.0.jdk/Contents/Home
export JAVA_HOME=`/usr/libexec/java_home -v 1.8`

